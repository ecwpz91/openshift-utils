[Unit]
Description=Wetty Terminal
Documentation=https://github.com/krishnasrinivas/wetty.git
After=network.target

[Service]
Type=simple
WorkingDirectory=/usr/lib/node_modules/wetty
ExecStart=/usr/bin/node app.js --sslkey /home/{{amazon_user}}/.ssh/privkey.pem --sslcert /home/{{amazon_user}}/.ssh/cert.pem -p 8888
Restart=always
RestartSec=5s
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target
